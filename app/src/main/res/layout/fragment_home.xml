<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26262C"
    tools:context=".ui.main.home.HomeFragment">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:shimmer_animation_duration="2000"
                    app:shimmer_auto_start="true">

                        <include layout="@layout/shimmer_loading_top" />




                </io.supercharge.shimmerlayout.ShimmerLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:spanCount="2" />

            </FrameLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Now Playing"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:text="See all"
                    android:id="@+id/now_playing_see_all"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/now_playing_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:shimmer_animation_duration="2000"
                    app:shimmer_auto_start="true">
                    <include layout="@layout/shimmmer_loading_now_playing"/>
                </io.supercharge.shimmerlayout.ShimmerLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_now_playing"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Top Rated"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:text="See all"
                    android:id="@+id/top_rated_see_all"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/top_rated_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shimmer_animation_duration="2000"
                app:shimmer_auto_start="true">
                <include layout="@layout/shimmmer_loading_now_playing"/>
            </io.supercharge.shimmerlayout.ShimmerLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_top_rated"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Popular"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:text="See all"
                    android:id="@+id/popular_see_all"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/popular_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shimmer_animation_duration="2000"
                app:shimmer_auto_start="true">
            <include layout="@layout/shimmmer_loading_now_playing"/>
            </io.supercharge.shimmerlayout.ShimmerLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_popular"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Upcoming"
                    android:textColor="@color/white"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:text="See all"
                    android:id="@+id/upcoming_see_all"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>