<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1B1B1D"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/poster_path"
                android:layout_width="match_parent"
                android:src="@drawable/film_upload"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_270sdp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="?actionBarSize">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_28sdp"
                app:cardBackgroundColor="#66000000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"

                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_14sdp"
                android:layout_height="@dimen/_28sdp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow___left_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.card.MaterialCardView>



        </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/title_name_textView"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp"

                app:cardBackgroundColor="@color/primaryColor"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rating_textView"
                    android:layout_width="wrap_content"
                    android:text="IMDb 6.2/10"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/download"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/bookmark"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/upload"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/white"
            android:alpha=".5"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Description"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/description_textView"
            android:layout_width="match_parent"

            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="#CCFFFFFF"
            android:layout_height="wrap_content"/>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/white"
            android:alpha=".5"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Additional info"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/release_data_textView"
            android:layout_width="match_parent"

            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/genres_textView"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@color/white"
            android:alpha=".5"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Trailers and Photos"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photos_recyclerview"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</androidx.core.widget.NestedScrollView>